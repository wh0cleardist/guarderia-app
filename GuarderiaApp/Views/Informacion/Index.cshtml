@{
    ViewData["Title"] = "Menú - Guardería Sonrisitas";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="card shadow-lg border-0 rounded-4 mb-5 p-4 text-center">

    <h3 class="text-success fw-bold mb-4">Menús detallados</h3>

    <!-- Menú 1 -->
    <div class="mb-5">
        <h4 class="text-primary mb-3">Menú 1</h4>

        <h5 class="text-secondary mb-2"> Desayuno: Puré de batata con queso y pan</h5>
        <ul class="list-unstyled">
            <li>1 batata pequeña (pelada y en cubos)</li>
            <li>1/4 taza de leche materna, fórmula o leche entera</li>
            <li>1 rebanada de pan integral blando</li>
            <li>1 rebanada de queso blanco bajo en sal</li>
        </ul>

        <h5 class="text-secondary mt-4 mb-2">Merienda: Banana con yogurt natural</h5>
        <ul class="list-unstyled">
            <li>1/2 banana madura</li>
            <li>1/4 taza de yogurt natural sin azúcar</li>
        </ul>
    </div>

    <!-- Menú 2 -->
    <div>
        <h4 class="text-primary mb-3"> Menú 2</h4>

        <h5 class="text-secondary mb-2"> Desayuno: Mangú con huevo revuelto</h5>
        <ul class="list-unstyled">
            <li>1 plátano maduro (pelado y hervido)</li>
            <li>1/2 cdita de aceite de oliva</li>
            <li>1 huevo batido con 1 cda de agua</li>
            <li>1 cdita de aguacate triturado (opcional)</li>
        </ul>

        <h5 class="text-secondary mt-4 mb-2">Merienda: Compota de manzana + galletita de avena</h5>
        <ul class="list-unstyled">
            <li>
                <strong>Compota:</strong>
                <ul class="list-unstyled">
                    <li>1 manzana pelada y picada</li>
                    <li>1/4 taza de agua</li>
                </ul>
            </li>
            <li class="mt-2">
                <strong>Galletita:</strong>
                <ul class="list-unstyled">
                    <li>1/2 taza de avena molida</li>
                    <li>1/4 taza de zanahoria rallada</li>
                    <li>1/4 banana madura</li>
                    <li>1 cdita de aceite de coco (opcional)</li>
                </ul>
            </li>
        </ul>
    </div>
</div>


